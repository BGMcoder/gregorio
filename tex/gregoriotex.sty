\def\greinitialformat#1{%
\begin{huge}#1\end{huge}%
\relax %
}

\def\grebiginitialformat#1{%
\begin{Huge}#1\end{Huge}%
\relax %
}

\def\includescore#1{%
\input #1%
\relax %
}

\def\greitalic#1{%
\textit{#1}%
\relax %
}

\def\gresmallcaps#1{%
\textsc{#1}%
\relax %
}

\def\greboldfont#1{%
\textbf{#1}%
\relax %
}

\def\grett#1{%
\texttt{#1}%
\relax %
}

\def\coloredlines#1#2#3{%
\definecolor{gretempcolor}{RGB}{#1,#2,#3}%
\global\def\stafflinesformat{%
\color{gretempcolor}\relax}
\relax %
}

\def\redlines{%
